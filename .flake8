[flake8]
# Flake8 Configuration for Gen Z Agent

# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 15

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    .tox

# Ignore specific errors
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)
extend-ignore = E203, W503

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Show source code
show-source = True

# Show statistics
count = True
statistics = True
